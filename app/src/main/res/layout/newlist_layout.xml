<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nlist">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="251dp">

            <ImageView
                android:id="@+id/brr_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView7"
                android:layout_weight="0.09"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/brNew_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="14dp"
                android:text="Breed Name"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/Chil_Level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView7"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brNew_Name"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/brr_img"
                android:text="Suitable To Children"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gr_Info"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toStartOf="@+id/Chil_Level"
                android:text="Grooming Info"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/err_Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="Energy: "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_below="@+id/gr_Info"
                android:layout_alignStart="@+id/gr_Info" />

            <TextView
                android:id="@+id/food_Cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/brr_img"
                android:layout_alignStart="@+id/err_Level"
                android:text="Food Cost"
                android:textAppearance="@style/TextAppearance.AppCompat" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>