<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/brr_level"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/brr_imgPic"
                app:srcCompat="@drawable/cast_ic_notification_play"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/brr_imgPic"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView13"
                android:layout_below="@+id/brr_Name"
                app:srcCompat="@drawable/breed_icon" />


            <TextView
                android:id="@+id/brr_Name"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignEnd="@+id/brr_imgPic"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/brr_food"
                android:layout_width="168dp"
                android:layout_height="34dp"
                android:layout_below="@+id/brr_level"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/brr_Groom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/brr_Groom"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/brr_food"
                android:layout_toEndOf="@+id/brr_imgPic"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>